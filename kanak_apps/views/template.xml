                                                                <t t-if="combination_info['price']">
                                                                    <b t-esc="combination_info['price']" t-options="{'widget': 'monetary',  'display_currency': website.currency_id}"/>
                                                                </t>
                                                                <t t-else="">
                                                                    <b>FREE</b>
