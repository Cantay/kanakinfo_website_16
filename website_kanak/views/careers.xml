        <template id="jobs_show_website" name="JOBS shown on website ">
            <t t-foreach="jobs" t-as="job">
                <t t-if="job.website_published">
                    <a t-attf-href="#{job.website_url}" class="col-lg-4 col-md-4 col-sm-6 col-xs-12 open_job_jd job_text jobs_vacancy">
                        <table class="table">
                            <tr>
                                <td style="width:10%;border-top:none;"><img t-att-src="'/website/image/hr.job/%s/job_image' % (job.id)" style="height: 50px;" alt="" /></td>
                                <td style="width:90%;border-top:none;">
                                    <h5 style="text-align:left;margin-top:0;"><strong><span id="job_card_name" t-field="job.name" /></strong></h5>
                                    <div><i class="fa fa-briefcase">&amp;nbsp;</i>Experience - <span t-esc="job.exp_required" /> years</div>
                                    <t t-if="job.vacant_location">
                                        <div class="mt16">
                                            <i class="fa fa-map-marker">&amp;nbsp;</i>
                                            <!-- <span></span> -->
                                            <t t-foreach="job.vacant_location" t-as="vacant">
                                                <t t-esc="vacant.name" />,
                                            </t>
                                        </div>
                                        <a t-attf-href="#{job.website_url}" class="btn btn-light btn-sm mt16" style="border-radius:5px">Read More</a>
                                    </t>
                                </td>
                            </tr>
                        </table>
                        <div>
                        </div>
                    </a>
                </t>
            </t>
        </template>
        <template id="template_details_inherit" inherit_id="website_hr_recruitment.detail">
            <xpath expr="//div[hasclass('js_hr_recruitment')]" position="replace">
                <t t-set="pageName" t-value="'kanak_careers'" />
                <div id="wrap" class="js_hr_recruitment">
                    <div class="oe_structure" />
                    <section class="mb16 bg-white">
                        <div class="container">
                            <div class="float-end">
                                <a t-attf-href="/jobs/apply/#{job.id}" class="btn btn-primary btn-lg pull-right mt32 mb4">Apply Now!</a>
                            </div>
                            <label class="mb0 mt16"><a href="/jobs">Jobs</a></label> /
                            <h1 class="mb0 mt0" t-field="job.name" />
                            <h4 class="mt0" t-field="job.address_id" t-options='{
                        "widget": "contact",
                        "fields": ["city"],
                        "no_tag_br": True
                    }' />
                        </div>
                    </section>
                    <section class="mb32 jd_details">
                        <div class="container container_summary">
                            <p class="text-justify">Summary: <span t-field="job.job_summary" /></p>
                        </div>
                        <div class="container">
                            <h1>Job <span style="color:red;">Description:</span></h1>
                            <p class="mt0 lead" t-field="job.description" />
                        </div>
                        <div class="container skills_container">
                            <div class=" col skills_tags">
                                <h2 class="mb0 mt0">Skills:</h2>
                                <t t-foreach="job.job_skill" t-as="job_skill">
                                    <p t-esc="job_skill.name" />
                                </t>
                            </div>
                        </div>
                        <div class="container">
                            <div class="Note text-center">
                                <h3><cite><span>Note:</span> Fresher's can also apply!!</cite></h3>
                            </div>
                        </div>
                    </section>
                    <div class="oe_structure">
                        <section class="o_job_bottom_bar mt32 mb32">
                            <div class="text-center">
                                <a t-attf-href="/jobs/apply/#{job.id}" class="btn btn-primary btn-lg">Apply Now!</a>
                                <br />
                                <br />
                            </div>
                        </section>
                    </div>
                </div>
            </xpath>
        </template>
        <template id="apply" inherit_id="website_hr_recruitment.apply">
